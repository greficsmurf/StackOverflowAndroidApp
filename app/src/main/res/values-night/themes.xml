<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StackExchange" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/Theme.StackExchange.BottomNavigationView</item>
        <item name="progressIndicatorStyle">@style/Theme.StackExchange.ProgressIndicator</item>


        <item name="error_drawable">@drawable/ic_error_outline_24px_night</item>
        <item name="settings_drawable">@drawable/ic_settings_24px_night</item>
        <item name="toolbar_color">@color/black</item>
    </style>
    <style name="Theme.StackExchange.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemRippleColor">@color/light_gray</item>
    </style>
    <style name="Theme.StackExchange.ProgressIndicator" parent="Widget.MaterialComponents.ProgressIndicator.Linear.Indeterminate">
        <item name="indicatorColor">@color/purple_700</item>
    </style>

</resources>