<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.StackExchange.Common.ItemTitle" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>

        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.StackExchange.Common.DefaultText" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>

        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="DefaultMargins">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>

        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    <style name="Theme.StackExchange.Common.DateText" parent="Theme.StackExchange.Common.DefaultText">
        <item name="android:textSize">12sp</item>
        <item name="color">@color/dark_gray</item>
    </style>


    <attr name="error_drawable" format="reference"/>
    <attr name="settings_drawable" format="reference"/>
    <attr name="account_drawable" format="reference"/>
    <attr name="toolbar_color" format="reference"/>
    <attr name="sign_out_icon" format="reference"/>

    <item name="m_nav_enter_anim" type="anim">@android:anim/slide_in_left</item>
    <item name="m_nav_exit_anim" type="anim">@android:anim/slide_out_right</item>
    <item name="m_nav_pop_enter_anim" type="anim">@anim/m_slide_in_right</item>
    <item name="m_nav_pop_exit_anim" type="anim">@anim/m_slide_out_left</item>
</resources>